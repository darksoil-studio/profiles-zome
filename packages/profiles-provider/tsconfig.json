{
	"compilerOptions": {
		"target": "es2021",
		"module": "esnext",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"lib": ["es2021", "dom"],
		"strict": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"incremental": true,
		"outDir": "dist",
		"sourceMap": true,
		"inlineSources": true,
		"declaration": true,
		"rootDir": "./src",
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"]
}
